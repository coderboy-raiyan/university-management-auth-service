{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  // HERE
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "prettier"
  ],

  "rules": {
    "no-unused-vars": "error",
    "no-console": "warn",
    "no-unused-expressions": "error",
    "no-unreachable": "error"
  },

  "env": {
    "browser": true,
    "es2021": true
  }
}
